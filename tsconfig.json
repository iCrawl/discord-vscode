{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"rootDir": "src",
		"outDir": "dist",
		"declaration": false,
		"sourceMap": true,
		"removeComments": false,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules"
	]
}
